
<div class="home-grid">
  <h2><%= @random_word %></h2>
</div>


<form action="/score">
  <label for="answer">What is your guess?</label>
  <input type="text" name="answer" placeholder="Write a word" >
  <input type="hidden" id="endTime" name="end_time" value="">
  <input type="hidden" name="start_time" value="<%= Time.now.to_i %>">
  <input type="hidden" name="grid" value="<%= @random_word %>">
  <input type="submit" value="Go!">
</form>

<script>
  $('form').on('submit', function(event) {
    event.preventDefault();
    $('#endTime')[0].value = Date.now() / 1000;
    $(this).unbind('submit').submit();
  })
</script>
